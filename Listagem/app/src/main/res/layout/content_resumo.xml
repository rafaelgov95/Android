<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ufms.cpcx.jose.listagem.view.Tela2">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:id="@+id/imgResumo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvNomedoLanche"
        android:layout_alignEnd="@+id/tvNomedoLanche" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOME DO LANCHE"
        android:id="@+id/tvNomedoLanche"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resumo "
        android:id="@+id/tvResumolanche"
        android:layout_below="@+id/tvNomedoLanche"
        android:layout_marginTop="101dp"
        android:layout_alignLeft="@+id/imgResumo"
        android:layout_alignStart="@+id/imgResumo"
        android:layout_alignRight="@+id/imgResumo"
        android:layout_alignEnd="@+id/imgResumo"
        android:layout_above="@+id/imgResumo" />
</RelativeLayout>